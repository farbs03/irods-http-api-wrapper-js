{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "outDir": "./dist",
        "rootDir": "./src",
        "forceConsistentCasingInFileNames": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "allowJs": true,
    },
    "exclude": ["./src/tests/*", "./docs/**/*", "./dist/**/*", "babel.config.cjs", "jest.config.cjs"]
}
